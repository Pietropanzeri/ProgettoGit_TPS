<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.View.LoginPage"
             Title="LoginPage"
             xmlns:Controller ="clr-namespace:Client.Controller"
             x:DataType="Controller:LoginPageController">
    <VerticalStackLayout>
        <Entry Placeholder="Username" x:Name="entryUsername" Text="{Binding ViewUsername}" />
        <Entry Placeholder="Password" x:Name="entryPassword" Text="{Binding ViewPassword}" />
        <Label Text="{Binding Message}"/>
        <Button Command="{Binding LoginCommand}"/>
        

    </VerticalStackLayout>
</ContentPage>